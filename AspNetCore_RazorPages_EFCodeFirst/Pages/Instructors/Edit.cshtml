@page
@model AspNetCore_RazorPages_EFCodeFirst.Pages.Instructors.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Instructor</h4>
<hr />
<div class="row">
    <div class="col-md-9">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Instructor.ID" />
            <div class="row align-items-center">
                <label asp-for="Instructor.LastName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Instructor.LastName" class="form-control" />
                </div>
                <div class="col-sm-4">
                    <span asp-validation-for="Instructor.LastName" class="form-text text-danger"></span>
                </div>
            </div>
            <div class="row align-items-center">
                <label asp-for="Instructor.FirstMidName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Instructor.FirstMidName" class="form-control" />
                </div>
                <div class="col-sm-4">
                    <span asp-validation-for="Instructor.FirstMidName" class="form-text text-danger"></span>
                </div>
            </div>
            <div class="row align-items-center">
                <label asp-for="Instructor.HireDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Instructor.HireDate" class="form-control" />
                </div>
                <div class="col-sm-4">
                    <span asp-validation-for="Instructor.HireDate" class="form-text text-danger"></span>
                </div>
            </div>
            <div class="row align-items-center">
                <label asp-for="Instructor.OfficeAssignment.Location" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Instructor.OfficeAssignment.Location" class="form-control" />
                </div>
                <div class="col-sm-4">
                    <span asp-validation-for="Instructor.OfficeAssignment.Location" class="form-text text-danger"></span>
                </div>
            </div>
            <div class="row align-items-center">
                <label class="col-sm-2 col-form-label">课程信息</label>
                <div class="col-sm-6">
                    <div class=" table">
                        <table class="table-hover">
                            <tr>
                                @{
                                    int cnt = 0;
                                    foreach (var course in Model.AssignedCourseDataList)
                                    {
                                        if (cnt++ % 3 == 0)
                                        {
                                        @:</tr><tr>
                                        }
                                        @:<td>
                                            <input type="checkbox" name="selectedCourses" value="@course.CourseID" @(Html.Raw(course.Assigned ? "checked=\"checked\"" : "")) />
                                            @course.CourseID@:@course.Title
                                        @:</td>
                                    }
                                @:</tr>
                                }
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-sm-10 offset-sm-2">
                    <input type="submit" value="保存" class="btn btn-primary" />
                </div>
            </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">返回列表</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
