@page "{id:int}"
@model AspNetCore_RazorPages_EFCodeFirst.Pages.Departments.EditModel
@using AspNetCore_RazorPages_EFCodeFirst.Common

@{
    ViewData["Title"] = "编辑";
}

<h1>编辑</h1>

<h4>院系</h4>
<hr />
<div class="row">
    <div class="col-md-9">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Department.DepartmentID" />
            <input type="hidden" asp-for="Department.ConcurrencyToken" />
            <div class="form-group">
                <label>数据版本</label>@Utility.GetChars(Model.Department.ConcurrencyToken)
            </div>
            <div class="row align-items-center">
                <label asp-for="Department.Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Department.Name" class="form-control" />
                </div>
                <div class="col-sm-4">
                    <span asp-validation-for="Department.Name" class="form-text text-danger"></span>
                </div>
            </div>
            <div class="row align-items-center">
                <label asp-for="Department.Budget" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Department.Budget" class="form-control" />
                </div>
                <div class="col-sm-4">
                    <span asp-validation-for="Department.Budget" class="form-text text-danger"></span>
                </div>
            </div>
            <div class="row align-items-center">
                <label asp-for="Department.StartDate" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Department.StartDate" class="form-control" />
                </div>
                <div class="col-sm-4">
                    <span asp-validation-for="Department.StartDate" class="form-text text-danger"></span>
                </div>
            </div>
            <div class="row align-items-center">
                <label asp-for="Department.InstuctorID" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    @*<input asp-for="Department.InstuctorID" class="form-control" />*@
                    <select asp-for="Department.InstuctorID" class="form-control" asp-items="@Model.InstructorNameSL"></select>
                </div>
                <div class="col-sm-4">
                    <span asp-validation-for="Department.InstuctorID" class="form-text text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-10 offset-sm-2">
                    <input type="submit" value="保存" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
