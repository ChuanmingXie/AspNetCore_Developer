@page
@model AspNetCore_RazorPages_EFCodeFirst.Pages.Students.DeleteModel

@{
    ViewData["Title"] = "删除";
}

<h1>删除</h1>

<p class="text-danger">@Model.ErrorMessage</p>
<h3>是否确认删除此项?</h3>
<div>
    <h4>学生</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Student.NickName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Student.NickName)</dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Student.FirstMidName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Student.FirstMidName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Student.LastName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Student.LastName)</dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Student.NativePlace)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Student.NativePlace)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Student.EnrollmentDate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Student.EnrollmentDate)</dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Student.ID" />
        <input type="submit" value="删除" class="btn btn-danger" /> |
        <a asp-page="./Index">返回列表</a>
    </form>
</div>
