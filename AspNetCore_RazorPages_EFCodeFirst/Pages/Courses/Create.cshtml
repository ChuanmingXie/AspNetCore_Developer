@page
@model AspNetCore_RazorPages_EFCodeFirst.Pages.Courses.CreateModel

@{
    ViewData["Title"] = "创建";
}

<h1>创建</h1>

<h4>课程</h4>
<hr />
<div class="row">
    <div class="col-md-9">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="form-text text-danger"></div>
            <div class="row mb-2 align-items-center">
                <label asp-for="Course.CourseID" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Course.CourseID" class="form-control" />
                </div>
                <div class="col-sm-4">
                    <span asp-validation-for="Course.CourseID" class="form-text text-danger"></span>
                </div>
            </div>
            <div class="row mb-2 align-items-center">
                <label asp-for="Course.Title" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Course.Title" class="form-control" />
                </div>
                <div class="col-sm-4">
                    <span asp-validation-for="Course.Title" class="form-text text-danger"></span>
                </div>
            </div>
            <div class="row mb-2 align-items-center">
                <label asp-for="Course.Credits" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Course.Credits" class="form-control" />
                </div>
                <div class="col-sm-4">
                    <span asp-validation-for="Course.Credits" class="form-text text-danger"></span>
                </div>
            </div>
            <div class="row mb-2 align-items-center">
                <label asp-for="Course.DepartmentID" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    @*<select asp-for="Course.DepartmentID" class="form-control" asp-items="ViewBag.DepartmentID"></select>*@
                    <select asp-for="Course.DepartmentID" class="form-control" asp-items="@Model.DepartmentNameSL">
                        <option value="">--Select Department--</option>
                    </select>
                </div>
                <div class="col-sm-4">
                    <span asp-validation-for="Course.DepartmentID" class="form-text text-danger"></span>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-10 offset-sm-2">
                    <input type="submit" value="创建" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
